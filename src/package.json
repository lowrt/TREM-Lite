{
  "name": "trem_lite",
  "version": "2.0.0-pre.1",
  "description": "Taiwan Real-time Earthquake Monitoring",
  "main": "main.js",
  "author": "whes1015",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "productName": "TREM-Lite",
    "appId": "tw.exptech.trem_lite",
    "win": {
      "icon": "TREM.ico"
    },
    "directories": {
      "output": "../dev"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development"
    },
    "publish": {
      "provider": "github"
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.56.0"
  },
  "dependencies": {
    "@electron/remote": "^2.1.1",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "leaflet": "^1.9.4",
    "leaflet-edgebuffer": "^1.0.6",
    "leaflet-geojson-vt": "github:ExpTechTW/leaflet-geojson-vt",
    "speak-tts": "^2.0.8",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.16.0"
  }
}
